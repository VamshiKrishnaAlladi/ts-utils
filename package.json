{
    "name": "@vka/ts-utils",
    "version": "1.4.0",
    "description": "A Collection of utility functions for TS made in TS",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "keywords": [
        "TS-Utils",
        "Utilities",
        "utils"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/VamshiKrishnaAlladi/ts-utils.git"
    },
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/ts-utils/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/ts-utils#readme",
    "main": "ts-utils.js",
    "scripts": {
        "build": "tsc",
        "lint": "tslint -t codeFrame -p .",
        "test": "jest --verbose",
        "watch:build": "tsc --watch",
        "watch:lint": "watch \"tslint -t codeFrame -p .\"",
        "watch:test": "jest --watchAll --verbose"
    },
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "devDependencies": {
        "@types/jest": "^22.0.0",
        "@types/node": "^8.5.1",
        "jest": "^22.0.4",
        "ts-jest": "^22.0.0",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.4.2",
        "typescript": "^2.6.2",
        "watch": "^1.0.2"
    },
    "jest": {
        "collectCoverage": true,
        "mapCoverage": true,
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./ts-jest.tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
