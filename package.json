{
    "name": "@vka/ts-utils",
    "version": "0.0.0-development",
    "description": "A Collection of utility functions for TS made in TS",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "keywords": [
        "TS-Utils",
        "Utilities",
        "utils"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/VamshiKrishnaAlladi/ts-utils.git"
    },
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/ts-utils/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/ts-utils#readme",
    "main": "ts-utils.js",
    "scripts": {
        "build": "tsc",
        "commit": "git-cz",
        "lint": "tslint -t codeFrame -p .",
        "test": "jest --verbose",
        "test-ci": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage",
        "watch:build": "tsc --watch",
        "watch:test": "jest --watchAll --verbose",
        "semantic-release": "semantic-release"
    },
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "devDependencies": {
        "@types/jest": "^22.1.4",
        "@types/node": "^9.4.6",
        "codacy-coverage": "^2.1.0",
        "commitizen": "^2.9.6",
        "cz-conventional-changelog": "^2.1.0",
        "jest": "^22.4.2",
        "semantic-release": "^12.4.1",
        "ts-jest": "^22.4.1",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.7.0",
        "typescript": "^2.7.2"
    },
    "jest": {
        "collectCoverage": true,
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./ts-jest.tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
