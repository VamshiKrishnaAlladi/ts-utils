{
    "name": "@vka/ts-utils",
    "version": "0.0.0-development",
    "description": "A Collection of utility functions for TS made in TS",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "keywords": [
        "TS-Utils",
        "Utilities",
        "utils"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/VamshiKrishnaAlladi/ts-utils.git"
    },
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/ts-utils/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/ts-utils#readme",
    "main": "dist/ts-utils.js",
    "types": "dist/ts-utils.d.ts",
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "codecov": "codecov",
        "lint": "tslint -t codeFrame -p .",
        "prePublishOnly": "npm run lint && npm test",
        "prepare": "npm run build",
        "semantic-release": "semantic-release",
        "test": "jest --config jest.config.json",
        "test:ci": "npm test -- --coverage",
        "posttest:ci": "cat ./coverage/lcov.info | codacy-coverage",
        "test:verbose": "npm test -- --verbose",
        "watch:build": "npm run build -- --watch",
        "watch:test": "npm test -- --watchAll"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint && npm test"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "8.1.0",
        "@commitlint/config-conventional": "8.1.0",
        "@types/jest": "24.0.18",
        "@types/node": "12.7.2",
        "codacy-coverage": "3.4.0",
        "codecov": "3.5.0",
        "cz-conventional-changelog": "3.0.3",
        "fs-extra": "8.1.0",
        "husky": "3.0.4",
        "jest": "24.9.0",
        "rimraf": "3.0.0",
        "semantic-release": "15.13.24",
        "ts-jest": "24.0.2",
        "tslint": "5.19.0",
        "tslint-config-airbnb": "5.11.1",
        "typescript": "3.5.3"
    }
}
